@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    @Styles.Render("~/Content/DataTable")
}
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Team Details</h3>
    </div>
    <div class="box-body">
        <table id="teamResultTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Team 1</th>
                    <th>Score</th>
                    <th>Team2</th>
                    <th>Date</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
    @section scripts {
        @Scripts.Render("~/Scripts/DataTable")
        <script>
            $(document).ready(function () {
                $("#teamResultTable").DataTable({
                    "processing": false,
                    "serverSide": true,
                    "filter": false,
                    "orderMulti": false,
                    "ajax": {
                        "url": "/TeamDetails/LoadResults",
                        "type": "POST",
                        "datatype": "json"
                    },
                    "columns": [
                            { "data": "TeamFirst", "team1": "TeamFirst", "autoWidth": true },
                            { "data": "Score", "score": "Score", "autoWidth": true },
                            { "data": "TeamSecond", "team2": "TeamSecond", "autoWidth": true },
                            { "data": "Date", "date": "Date", "autoWidth": true }
                    ]
                });
            });
        </script>
        }